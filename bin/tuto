#!/usr/bin/env sh

cabal build

turns=${1:-3}

./vistools/playgame.py \
  --player_seed 42 \
  --end_wait=0.25 \
  --log_dir logs \
  --log_output \
  --log_error \
  --log_stderr \
  --turns $turns \
  --map_file tools/maps/example/tutorial1.map \
  "/home/thib/haskant/dist/build/MyBot/MyBot +RTS -xc -RTS" \
  "python tools/sample_bots/python/HoldBot.py" 
